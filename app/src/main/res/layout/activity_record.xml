<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4DE"
    tools:context=".RecordActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFDF84"
        android:elevation="30dp"
        android:padding="18dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView_cal"
            android:layout_width="368dp"

            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/nanumgothiccoding"
            android:gravity="center"
            android:text="산책일기"
            android:textColor="#945252"
            android:textSize="23sp"
            android:textStyle="normal" />


    </LinearLayout>

    <ImageView
        android:id="@+id/rec_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/rec_read"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/rec_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rec_read"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/rec_new" />

</androidx.constraintlayout.widget.ConstraintLayout>