<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rec_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rec_read_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="30sp"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="24sp" />

            <Button
                android:id="@+id/rec_change_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight="0"
                android:background="@drawable/read_change"
                android:textSize="5dp"
                />

            <Button
                android:id="@+id/rec_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:layout_weight="0"
                android:background="@drawable/read_delete"

                android:textColor="#FFFFFF"
                android:textSize="5dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/rec_read_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/rec_pic" />

        <TextView
            android:id="@+id/rec_read_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:text="TextView"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>